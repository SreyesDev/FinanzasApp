{
  "name": "FinanzasApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "start-clean": "react-native start --reset-cache",
    "start-android": "react-native run-android",
    "start-ios": "npx react-native run-ios --simulator=\"iPhone 15\"",
    "lint": "eslint .",
    "test": "jest",
    "react-native-assets": "npx react-native-asset",
    "// ═════════════════════════════════════════════════════════════": "",
    "// 🧹 LIMPIEZA Y MANTENIMIENTO": "",
    "// ════════════════════════════════════════════════════════════════": "",
    "clean:metro": "watchman watch-del-all && react-native start --reset-cache",
    "clean:all": "watchman watch-del-all && rm -rf node_modules yarn.lock && yarn install",
    "clean:android-build": "cd android && ./gradlew clean && cd ..",
    "clean:ios-build": "rm -rf ios/build && rm -rf ios/Pods && rm -rf ios/Podfile.lock",
    "postinstall": "cd ios && pod install && cd ..",
    "// 🍎 iOS - DESARROLLO (solo macOS)": "",
    "ios-installer": "yarn install && cd ios && pod install && cd ..",
    "ios-uninstaller": "watchman watch-del-all && yarn cache clean && rm -rf node_modules/ && rm -f yarn.lock && cd ios && rm -rf Pods Podfile.lock build assets main.jsbundle && pod deintegrate && rm -rf ~/Library/Caches/CocoaPods && rm -rf ~/Library/Developer/Xcode/DerivedData/*",
    "ios:clean-start": "yarn clean:metro && yarn start-ios",
    "build:ios": "npx react-native bundle --entry-file ./index.js --bundle-output ios/main.jsbundle --dev=false --platform='ios' --assets-dest='./ios'",
    "// ════════════════════════════════════════════════════════════": "",
    "// 🤖 ANDROID - DESARROLLO": "",
    "// ═══════════════════════════════════════════════════════════": "",
    "android-installer": "yarn install",
    "android-uninstaller": "watchman watch-del-all && yarn cache clean && rm -rf node_modules/ && rm -f yarn.lock && cd android && ./gradlew clean",
    "android:clean-start": "yarn clean:metro && yarn start-android",
    "android-build-qa": "cd android && ./gradlew clean assembleRelease",
    "android-build-prod": "cd android && ./gradlew clean bundleRelease",
    "build:dev": "cd android && ./gradlew assembleRelease",
    "clean": "yarn cache clean && cd ./android && ./gradlew clean"
  },
  "dependencies": {
    "@react-navigation/bottom-tabs": "^7.4.7",
    "@react-navigation/drawer": "^7.5.8",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/stack": "^7.4.8",
    "react": "18.3.1",
    "react-native": "0.75.4",
    "react-native-gesture-handler": "2.14.1",
    "react-native-reanimated": "3.10.1",
    "react-native-safe-area-context": "4.11.0",
    "react-native-screens": "3.34.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.75.4",
    "@react-native/eslint-config": "0.75.4",
    "@react-native/metro-config": "0.75.4",
    "@react-native/typescript-config": "0.75.4",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "18.3.1",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
